<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginVertical="4dp"
    android:paddingVertical="18dp"
    android:layout_marginHorizontal="12dp"
    android:paddingHorizontal="18dp"
    android:background="@drawable/transaction_history_background"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_payment_transaction"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/lightGrey"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Payment" />

    <TextView
        android:id="@+id/tv_context_transaction"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_payment_transaction"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_amount_transaction"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_date_transaction"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_context_transaction"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>